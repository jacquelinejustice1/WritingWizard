<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.writingwizard.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <AnchorPane prefHeight="300.0" prefWidth="1366">
      <children>
         <Label layoutX="571.0" layoutY="92.0" text="Welcome to">
            <font>
               <Font name="Arial Bold" size="36.0" />
            </font>
         </Label>
         <Label layoutX="362.0" layoutY="134.0" text="WRITING WIZARD">
            <font>
               <Font name="Arial Bold" size="72.0" />
            </font>
            <effect>
               <DropShadow blurType="ONE_PASS_BOX" height="26.86" offsetX="5.0" radius="12.1975" width="23.93">
                  <color>
                     <Color red="0.5215686559677124" green="0.08235294371843338" blue="1.0" />
                  </color>
               </DropShadow>
            </effect>
         </Label>
      </children></AnchorPane>
    <AnchorPane prefHeight="300.0" prefWidth="1366">
      <PasswordField fx:id="passwordLogin" layoutX="596.0" layoutY="138.0" />
      <TextField fx:id="usernameLogin" layoutX="594.0" layoutY="80.0" onAction="#usernameLogin" />
      <Label layoutX="633.0" layoutY="14.0" text="Sign In">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </Label>
      <Label layoutX="594.0" layoutY="63.0" text="Username" />
      <Label layoutX="596.0" layoutY="121.0" text="Password" />
      <Button fx:id="signInButton" layoutX="616.0" layoutY="179.0" mnemonicParsing="false" onAction="#signInButton" prefHeight="25.0" prefWidth="108.0" style="-fx-background-color: #8515FF;" text="SIGN IN" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="19.0" />
         </font>
      </Button>
    </AnchorPane>

</VBox>
