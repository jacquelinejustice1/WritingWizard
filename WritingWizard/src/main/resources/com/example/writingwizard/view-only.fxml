<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.writingwizard.ViewOnlyController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <AnchorPane prefHeight="36.0" prefWidth="1366.0">
        <!--Logo and Name of Application -->
        <ImageView fitHeight="76.0" fitWidth="77.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" />
        <ImageView fitHeight="63.0" fitWidth="282.0" layoutX="86.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true" />
      <Button fx:id="signOutViewOnlyButton" layoutX="1188.0" layoutY="20.0" mnemonicParsing="false" onAction="#signOutViewOnly" prefHeight="32.0" prefWidth="124.0" style="-fx-background-color: #8515FF;" text="SIGN OUT" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </Button>
    </AnchorPane>
    <AnchorPane prefHeight="20.0" prefWidth="1366.0">

    </AnchorPane>
    <AnchorPane prefHeight="43.0" prefWidth="1366.0">
        <Label layoutX="190.0" layoutY="4.0" text="YOU ARE VIEWING">
           <font>
               <Font name="Arial Bold" size="14.0" />
           </font>
        </Label>
        <Label fx:id="adminUsername" layoutX="333.0" layoutY="4.0" text="(username)">
           <font>
               <Font name="Arial Bold" size="14.0" />
           </font>
        </Label>
        <Label layoutX="426.0" layoutY="6.0" text="FILE (VIEW ONLY)">
           <font>
               <Font name="Arial Bold" size="14.0" />
           </font>
        </Label>
      <Label fx:id="viewOnlyDocumentName" layoutX="1058.0" layoutY="6.0" text="DOCUMENT (1)">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font>
      </Label>
    </AnchorPane>
    <!--Text Box For Users to Type In-->
    <AnchorPane VBox.vgrow="ALWAYS">
        <TextArea fx:id="docTextArea" prefHeight="600" prefWidth="1116.0" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="100.0" />


    </AnchorPane>

</VBox>
