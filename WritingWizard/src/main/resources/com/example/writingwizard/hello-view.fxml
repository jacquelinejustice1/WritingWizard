<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.writingwizard.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <AnchorPane prefHeight="36.0" prefWidth="1366.0">
        <!--Logo and Name of Application -->
      <ImageView fitHeight="76.0" fitWidth="77.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" />
      <ImageView fitHeight="63.0" fitWidth="282.0" layoutX="86.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true" />
      <Button fx:id="signOutButton" layoutX="1070.0" layoutY="61.0" mnemonicParsing="false" onAction="#signOut" style="-fx-background-color: #8515FF;" text="SIGN OUT" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="shareButton" layoutX="1169.0" layoutY="61.0" mnemonicParsing="false" onAction="#shareDocument" style="-fx-background-color: #8515FF;" text="SHARE" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
      </Button>
    </AnchorPane>
<AnchorPane prefHeight="20.0" prefWidth="1366.0" />
    <Pane prefHeight="39.0" prefWidth="1366.0" style="-fx-background-color: lightgrey;">
        <Button fx:id="openFileButton" layoutX="14.0" layoutY="8.0" mnemonicParsing="false" onAction="#openDocument" style="-fx-background-color: #8515FF;" text="OPEN FILE" textFill="WHITE">
           <font>
               <Font name="Arial Bold" size="12.0" />
           </font>
        </Button>
        <Button fx:id="newFileButton" layoutX="108.0" layoutY="8.0" mnemonicParsing="false" onAction="#createNewDocument" style="-fx-background-color: #8515FF;" text="NEW FILE" textFill="WHITE">
           <font>
               <Font name="Arial Bold" size="12.0" />
           </font>
        </Button>
        <Button fx:id="saveDocumentButton" layoutX="193.0" layoutY="8.0" mnemonicParsing="false" onAction="#saveDocument" style="-fx-background-color: #8515FF;" text="SAVE FILE" textFill="WHITE">
           <font>
               <Font name="Arial Bold" size="12.0" />
           </font>
        </Button>
    </Pane>
     <AnchorPane prefHeight="41.0" prefWidth="1366.0">
         <TextField fx:id="documentName" layoutX="316.0" layoutY="47.0" onAction="#documentName" prefWidth="400.0" promptText="Untitled Document (1)" AnchorPane.leftAnchor="316.0">

         </TextField>
     </AnchorPane>
    <!--Text Box For Users to Type In-->
    <AnchorPane VBox.vgrow="ALWAYS">
        <TextArea fx:id="docTextArea" prefHeight="500" prefWidth="1000" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0" />

        <Pane prefHeight="500" prefWidth="270" style="-fx-background-color: lightgray;" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0">
            <Button fx:id="boldText" accessibleRole="TEXT_AREA" layoutX="15.0" layoutY="31.0" mnemonicParsing="false" onAction="#boldText" style="-fx-background-color: #8515FF;" text="BOLD" textFill="WHITE">
                <font>
                    <Font name="Arial Bold" size="12.0" />
                </font>
            </Button>
            <Button fx:id="italicText" layoutX="68.0" layoutY="31.0" mnemonicParsing="false" onAction="#italicText" style="-fx-background-color: #8515FF;" text="ITALIC" textFill="WHITE">
                <font>
                    <Font name="Arial Bold" size="12.0" />
                </font>
            </Button>
            <Button fx:id="underlineText" layoutX="15.0" layoutY="60.0" mnemonicParsing="false" onAction="#underlineText" style="-fx-background-color: #8515FF;" text="UNDERLINE" textFill="WHITE">
                <font>
                    <Font name="Arial Bold" size="12.0" />
                </font>
            </Button>
            <Button fx:id="strikeText" layoutX="127.0" layoutY="31.0" mnemonicParsing="false" onAction="#strikeText" style="-fx-background-color: #8515FF;" text="STRIKE" textFill="WHITE">
                <font>
                    <Font name="Arial Bold" size="12.0" />
                </font>
            </Button>
            <Label layoutX="14.0" layoutY="6.0" text="TEXT EDIT">
                <font>
                    <Font name="Arial Bold" size="15.0" />
                </font>
            </Label>
            <Label layoutX="14.0" layoutY="92.0" text="PARAGRAPH EDIT">
                <font>
                    <Font name="Arial Bold" size="15.0" />
                </font>
            </Label>
            <Button fx:id="rightAlignment" layoutX="135.0" layoutY="116.0" mnemonicParsing="false" onAction="#rightAlignment" style="-fx-background-color: #8515FF;" text="RIGHT" textFill="WHITE">
                <font>
                    <Font name="Arial Bold" size="12.0" />
                </font>
            </Button>
            <Button fx:id="leftAlignment" layoutX="15.0" layoutY="115.0" mnemonicParsing="false" onAction="#leftAlignment" style="-fx-background-color: #8515FF;" text="LEFT" textFill="WHITE">
                <font>
                    <Font name="Arial Bold" size="12.0" />
                </font>
            </Button>
            <Button fx:id="centerAlignment" layoutX="65.0" layoutY="115.0" mnemonicParsing="false" onAction="#centerAlignment" style="-fx-background-color: #8515FF;" text="CENTER" textFill="WHITE">
                <font>
                    <Font name="Arial Bold" size="12.0" />
                </font>
            </Button>
         <Label layoutX="14.0" layoutY="147.0" text="FONT SIZE">
            <font>
               <Font name="Arial Bold" size="15.0" />
            </font>
         </Label>
         <ComboBox fx:id="fontSize" layoutX="15.0" layoutY="171.0" onAction="#changeFontSize" prefHeight="25.0" prefWidth="65.0" promptText="11" style="-fx-background-color: #FFFfFF;" />
         <ColorPicker fx:id="fontColor" layoutX="112.0" layoutY="171.0" onAction="#changeFontColor" style="-fx-background-color: #FFFFFF;" />
         <Label layoutX="112.0" layoutY="147.0" text="FONT COLOR">
            <font>
               <Font name="Arial Bold" size="15.0" />
            </font>
         </Label>
         <Label layoutX="13.0" layoutY="208.0" text="FONTS">
            <font>
               <Font name="Arial Bold" size="15.0" />
            </font>
         </Label>
         <ComboBox fx:id="fontSelect" layoutX="15.0" layoutY="229.0" onAction="#changeFontSize" prefHeight="25.0" prefWidth="86.0" promptText="Select" style="-fx-background-color: #FFFfFF;" />
        </Pane>
    </AnchorPane>
    <AnchorPane layoutX="30.0" layoutY="30.0" prefHeight="36.0" prefWidth="1366.0">
        <ImageView fitHeight="76.0" fitWidth="77.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true"/>
        <ImageView fitHeight="63.0" fitWidth="282.0" layoutX="86.0" layoutY="20.0" pickOnBounds="true"
                   preserveRatio="true"/>

    </AnchorPane>

</VBox>
