<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.writingwizard.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!--Text Box For Users to Type In-->
    <AnchorPane VBox.vgrow="ALWAYS">
        <TextArea AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0" prefWidth="1000" prefHeight="500"/>

        <Pane AnchorPane.leftAnchor="10.0" AnchorPane.bottomAnchor="10.0" prefWidth="270" prefHeight="500" style="-fx-background-color: lightgray;"/>
    </AnchorPane>

</VBox>
