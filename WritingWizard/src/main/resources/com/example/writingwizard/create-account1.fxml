<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.writingwizard.CreateAccountController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <AnchorPane prefHeight="250.0" prefWidth="1366">
        <Label layoutX="562.0" layoutY="92.0" text="Welcome to">
            <font>
                <Font name="Arial Bold" size="36.0" />
            </font>
        </Label>
        <Label layoutX="354.0" layoutY="134.0" text="WRITING WIZARD">
            <font>
                <Font name="Arial Bold" size="72.0" />
            </font>
            <effect>
                <DropShadow blurType="ONE_PASS_BOX" height="26.86" offsetX="5.0" radius="12.1975" width="23.93">
                    <color>
                        <Color red="0.5215686559677124" green="0.08235294371843338" blue="1.0" />
                    </color>
                </DropShadow>
            </effect>
        </Label>
      <Button fx:id="returnToLogIn" mnemonicParsing="false" onAction="#returnToLogIn" prefHeight="37.0" prefWidth="213.0" style="-fx-background-color: #8515FF;" text="RETURN TO LOGIN" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </Button>

    </AnchorPane>
    <AnchorPane prefHeight="600.0" prefWidth="1366">
        <Label layoutX="594.0" layoutY="21.0" text="Create Account">
           <font>
               <Font name="Arial Bold" size="24.0" />
           </font>
        </Label>
        <TextField fx:id="usernameText" layoutX="520.0" layoutY="84.0" />
        <Label layoutX="520.0" layoutY="67.0" text="Username">
           <font>
               <Font name="Arial Bold" size="12.0" />
           </font>
        </Label>
        <TextField fx:id="reenterUsernameText" layoutX="520.0" layoutY="135.0" />
        <Label layoutX="520.0" layoutY="119.0" text="Re-enter Username">
           <font>
               <Font name="Arial Bold" size="12.0" />
           </font>
        </Label>
        <PasswordField fx:id="createPasswordText" layoutX="704.0" layoutY="84.0" />
        <Label layoutX="704.0" layoutY="67.0" text="Password">
           <font>
               <Font name="Arial Bold" size="12.0" />
           </font>
        </Label>
        <PasswordField fx:id="createPasswordReenterText" layoutX="704.0" layoutY="135.0" />
        <Label layoutX="704.0" layoutY="119.0" text="Re-enter password">
           <font>
               <Font name="Arial Bold" size="12.0" />
           </font>
        </Label>
        <Button fx:id="submitAccountButton" layoutX="563.0" layoutY="233.0" mnemonicParsing="false" onAction="#submitAccountInfo" prefHeight="25.0" prefWidth="228.0" style="-fx-background-color: #8515FF;" text="CREATE ACCOUNT" textFill="WHITE">
           <font>
               <Font name="Arial Bold" size="20.0" />
           </font>
        </Button>
      <Label fx:id="errorUsername" layoutX="478.0" layoutY="167.0" prefHeight="15.0" prefWidth="196.0" textFill="RED">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
      </Label>
      <Label fx:id="errorPassword" layoutX="689.0" layoutY="167.0" prefHeight="15.0" prefWidth="213.0" textFill="RED">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
      </Label>
      <Label fx:id="errorCreateAccount" layoutX="585.0" layoutY="189.0" prefHeight="15.0" prefWidth="178.0" textFill="RED">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
      </Label>

    </AnchorPane>


</VBox>
